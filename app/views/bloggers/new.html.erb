<% if @flash[:errors] %>
    <% @flash[:errors].each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label "Blogger Name:" %>
    <%= f.text_field :name %>
    <br>

    <%= f.label "Blogger Age:" %>
    <%= f.number_field :age %>
    <br>

    <%= f.label "Blogger Bio:" %>
    <%= f.text_area :bio %>
    <br>

    <%= f.submit %>

<% end %>