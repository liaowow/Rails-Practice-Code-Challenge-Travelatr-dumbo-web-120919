<% if @flash[:errors] %>
    <% @flash[:errors].each do |msg| %>
        <p><%= msg %></p>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label "Post Title:" %>
    <%= f.text_field :title %>
    <br>

    <%= f.label "Content:" %>
    <%= f.text_area :content %>
    <br>

    <%= f.label "Select a Blogger:" %>
    <%= f.collection_select :blogger_id, @bloggers, :id, :name %>
    <br>

    <%= f.label "Select a Destination:" %>
    <%= f.collection_select :destination_id, @destinations, :id, :name %>
    <br>

    <%= f.submit %>

<% end %>